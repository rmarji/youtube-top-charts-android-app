<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/c_bg_row_video_color">
	<RelativeLayout 
	 android:id="@+id/top_bar"
	 android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@drawable/rs_topbar_bg"
	     >

		<Button
		    android:id="@+id/btn_open_menu"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true" 
		    android:background="@drawable/rs_btn_menu" />

		<Button
		    android:id="@+id/btn_open_info"
		    android:layout_width="44dp"
		    android:layout_height="44dp"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true" 
		    android:background="@drawable/rs_btn_info" />

		<TextView
		    android:id="@+id/tv_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:textColor="@color/c_tool_bar_title_text"
			android:textStyle="bold" />
	    
	</RelativeLayout>
    <ListView
        android:id="@+id/lv"
        android:layout_below="@+id/top_bar"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000"
    		android:scrollbars="none"
    		android:divider="@null"
android:dividerHeight="0dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView1" >
    </ListView>

 
    
</RelativeLayout><!-- From: file:/Users/rmarji/AndroidStudioProjects/Android%20App/app/src/main/res/layout/ui_play_list.xml -->